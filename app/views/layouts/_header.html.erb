<header class="main-header">
  <nav class="navbar navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><%= Settings.nav_title %></a>
        <% if Settings.multi_location == true %>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <i class="fa fa-bars"></i>
          </button>
        <% end %>
      </div>
      <% if Settings.multi_location == true %>
        <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
          <ul class="nav navbar-nav">
            <% Settings.menu_items.each do |item| %>
              <li<% if request.path == item['actual_path'] %> class="active"<% end %>><a href="<%= item['actual_path'] %>"><span><%= item['name'] %></span></a></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <% if Settings.show_about == true %>
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <li<% if request.path == "/about" %> class="active"<% end %>><a href="/about">About</a></li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>
</header>
